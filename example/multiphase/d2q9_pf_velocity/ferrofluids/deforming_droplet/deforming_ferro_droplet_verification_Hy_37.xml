
<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/self_correcting/Hy_37/">
<!-- 
	Model:	d2q9_pf_velocity_ferro
        Verification case for ferrofluidic flows. This is
        a popular case from e.g.
            Exp: Flament et al. (1995) - PRE
            Hu et al. (2018) - PRE
            Li et al. (2020) - PoF

   Created: 	09-02-2021 
    By:		T.Mitchell & L. Laniewski-Wollk

	
-->
	<Units>
		<Param value="1.256637e-06N/A2" gauge="1"/>
		<Param value="0.0008m" gauge="10"/>
		<Param value="800kg/m3" gauge="1"/>
		<Param value="0.00307kg/s2" gauge="0.001"/>
	</Units>
<Geometry nx="0.016m" ny="0.016m" >
	<!--  5500A/m  1s -->
	<MRT><Box /></MRT>
	<Wall mask="ALL">
	    <Box   ny="1"  />
	    <Box   dy="-1" />
	    <Box   nx="1"/>
	    <Box   dx="-1"/>
	</Wall> 
	<North name="North">
	    <Box dy="-1"/>
	</North>
	<South name="South">
	    <Box ny="1"/>
	</South>
	<West name="West">
	    <Box nx="1"/>
	</West>
	<East name="East">
	    <Box dx="-1"/>
	</East>
</Geometry>
<Model>
	<Param name="Density_h" value="1.97500000" />    
	<Param name="Density_l" value="1.000" />    

	<Param name="Viscosity_h" value="0.05" />    
	<Param name="Viscosity_l" value="0.0025" />    

	<Param name="PhaseField_h" value="1" />    
	<Param name="PhaseField_l" value="0" />    
	<Param name="PhaseField_init"   value="1" />    

	<Param name="Radius"   value="0.001m" />
	<Param name="CenterX"  value="0.008m" />
	<Param name="CenterY"  value="0.008m" />
	<Param name="BubbleType"  value="1" />

	<Param name="M"     value="0.10" />   
	<Param name="W"     value="4" /> 
	<Param name="sigma" value="0.00307kg/s2" />

	<Param name="mu_1" value = "1.000000" />
	<Param name="mu_2" value = "3.200000" />
	<Param name="mu_0" value = "1.000000"/>

	<Param name="Hy_far" value="3700A/m"/>
	<Param name="Hx_far" value="0.0000"/>

	<Param name="relaxation" value="0.078"/>

	<Param name="BuoyancyY" value="0.0000" />
</Model>
<VTK />
<Container>
	<Stop DiffBBelow="5e-2" Times="1" Iterations="100"/>
	<RunAction name="MagToSteadyState" Iterations="500000"/>
</Container>
<VTK/>
<Repeat Times="20">
	<Repeat Times="1000"> 
		<Container>
			<Stop DiffBBelow="5e-2" Times="1" Iterations="100"/>
			<RunAction name="MagToSteadyState" Iterations="1000000"/>
		</Container>
		<Solve Iterations="1"/>
	</Repeat>
	<VTK/>
</Repeat>
</CLBConfig>
